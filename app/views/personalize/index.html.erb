<h1>Personalize</h1>

<% @items.in_groups_of(3, false).each do |group| %>
    <div class="row">
      <% group.each do |item| %>
          <div>
            <img src="<%= item['original_image'] %>" alt="<%= item['title'] %>" />
            <p>
              <%= truncate(item['title'], :length => 47)  %>
            </p>
          </div>
      <% end %>
    </div>
<% end %>

